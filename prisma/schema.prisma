generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  name     String
  email    String    @unique
  password String
  expenses Expense[]
  budget   Budget?
  isVerified Boolean @default(false)
  verifyToken String? @unique
}

model Expense {
  id        Int      @id @default(autoincrement())
  title     String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int      @unique
  month     Int
}

model EXPENSE_TYPE {
  id    Int    @id @default(autoincrement())
  title String
}

model Budget {
  id           Int  @id @default(autoincrement())
  targetAmount Int  @default(10000)
  user         User @relation(fields: [userId], references: [id])
  userId       Int  @unique
}
